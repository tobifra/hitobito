.alert.alert-warning
  = t('.explanation')
  %span
    = form_with method: :post, url: decline_group_event_invitation_path(@group, entry, @open_invitation) do |f|
      .btn-toolbar
        .btn-group
          = link_to(t('.buttons.accept'), contact_data_group_event_participations_path(@group, entry, event_role: { type: @open_invitation.participation_type }), class: 'btn', role: 'button')
          = f.submit t('.buttons.decline'), class: 'btn'
